class Solution:
    def nextGreater(self, arr):
        n = len(arr)
        res = [-1] * n
        stack = []  # store indices

        for i in range(2 * n):
            cur = arr[i % n]
            while stack and arr[stack[-1]] < cur:
                res[stack.pop()] = cur
            if i < n:  # push only during first pass
                stack.append(i)

        return res
